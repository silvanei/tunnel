<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="s3/tunnel" xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>MySource Coding Standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg value="s"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <!-- Permite nÃ£o camel case nos testes -->
        <exclude-pattern>*Test\.php$</exclude-pattern>
    </rule>

    <rule ref="Generic.PHP.RequireStrictTypes"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.Formatting.SpaceAfterNot"/>
    <!--<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>-->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="ignoreComments" value="true" />
            <property name="lineLimit" value="180"/>
        </properties>
    </rule>

    <rule ref="Squiz.Strings.DoubleQuoteUsage.NotRequired" />
    <rule ref="Squiz.WhiteSpace.OperatorSpacing">
        <properties>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <!-- Paths to check -->
    <file>bin</file>
    <file>src</file>
    <file>tests</file>
</ruleset>
